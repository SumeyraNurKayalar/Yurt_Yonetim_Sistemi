<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" prefHeight="400.0" prefWidth="350.0"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.controller.LoginController">

    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>

    <Label text="Yurt Yönetim Sistemi" textFill="#1e88e5">
        <font>
            <Font name="System Bold" size="24.0" />
        </font>
    </Label>

    <Label text="Öğrenci Girişi" textFill="#263238">
        <font>
            <Font size="16.0" />
        </font>
    </Label>

    <TextField fx:id="girisBilgisiField" promptText="Kullanıcı Adı / E-posta / T.C." />

    <PasswordField fx:id="sifreField" promptText="Şifre" />

    <Button onAction="#girisYap" prefWidth="200.0" text="Giriş Yap" style="-fx-background-color: #1e88e5; -fx-text-fill: white;">
        <VBox.margin>
            <Insets top="10.0" />
        </VBox.margin>
    </Button>

    <Button onAction="#kayitEkraniniAc" prefWidth="200.0" text="Yeni Hesap Oluştur (Kayıt Ol)" style="-fx-background-color: #607d8b; -fx-text-fill: white;">
        <VBox.margin>
            <Insets top="10.0" />
        </VBox.margin>
    </Button>

</VBox>
